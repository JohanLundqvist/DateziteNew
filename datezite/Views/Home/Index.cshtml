@model datezite.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="display-3">LTP Dating</h1>
    <p class="lead">Sveriges hetaste datingsida</p>
    <hr class="my-4">

</div>
<div class="row">
    @foreach (var item in Model.ExampleProfiles)
    {
        <div class="card mb-3 mx-1 col-sm">
            <h3 class="card-header">@Html.DisplayFor(m => item.Förnamn) @Html.DisplayFor(m => item.Efternamn) </h3>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(m => item.Kön), @Html.DisplayFor(m => item.Ålder)</h5>
            </div>

            <img src="~/Images/noImg.jpg" style="width:250px;height:250px; background: #FFFFFF;
                margin: auto;
                -moz-border-radius: 60px;
                border-radius: 100px;
                padding: 6px;
                box-shadow: 0px 0px 20px #888;" />

            <div class="card-body">
                <p>@Html.DisplayFor(m => item.Sysselsättning)</p>

                <a href="/Profiles/OtherProfile/@item.Id" class="card-link" style="float:right">Besök Min profil!</a>

            </div>

        </div>
    }
</div>



